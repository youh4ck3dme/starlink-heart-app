rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is accessing their own document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Hearts Collection: Chat history between Starry and kids
    match /hearts/{heartId} {
      allow read, write: if isAuthenticated() && (resource == null || resource.data.userId == request.auth.uid) && request.resource.data.userId == request.auth.uid;
      
      // Indexing requirement: userId field must be present for security queries
      allow list: if isAuthenticated() && request.query.limit <= 20 && request.query.offset == 0;
    }

    // Users Collection: XP, Level, Gems, Streaks
    match /users/{userId} {
      allow read, write: if isAuthenticated() && isOwner(userId);
    }
    
    // Global Data: Leaderboards, shared config
    match /global/{docId} {
      allow read: if true;
      allow write: if false; // Only admin via Firebase SDK
    }
    
    // Deny all by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
