+  flex-direction: column;
+}
+
+/* ===== SAFE AREA UTILITIES ===== */
+
+.safe-area-top {
+  padding-top: max(1rem, var(--sat));
+}
+
+.safe-area-bottom {
+  padding-bottom: max(1rem, var(--sab));
+}
+
+.safe-area-x {
+  padding-left: max(1rem, var(--sal));
+  padding-right: max(1rem, var(--sar));
+}
+
+.safe-area-all {
+  padding-top: max(1rem, var(--sat));
+  padding-bottom: max(1rem, var(--sab));
+  padding-left: max(1rem, var(--sal));
+  padding-right: max(1rem, var(--sar));
+}
+
